---
interface Props {
  title: string
  description: string
  icon?: string
  href?: string
  examples?: string[]
}

const { title, description, icon, href, examples } = Astro.props
---

<div class="group relative">
  <!-- Card glow on hover -->
  <div class="absolute -inset-px rounded-xl bg-gradient-to-b from-buoy/20 to-lavender/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-sm"></div>

  <div class="relative h-full bg-navy/50 border border-navy-light/20 rounded-xl p-6 hover:border-buoy/30 transition-all duration-300">
    {icon && (
      <div class="mb-4 text-3xl" set:html={icon} />
    )}

    <h3 class="text-lg font-semibold text-light mb-2 group-hover:text-buoy transition-colors">
      {href ? (
        <a href={href} class="hover:underline">
          {title}
        </a>
      ) : (
        title
      )}
    </h3>

    <p class="text-slate text-sm mb-4">
      {description}
    </p>

    {examples && examples.length > 0 && (
      <div class="font-mono text-xs space-y-1">
        {examples.map((ex) => (
          <div class="text-slate-dark bg-navy-dark/50 px-2 py-1 rounded">
            {ex}
          </div>
        ))}
      </div>
    )}

    {href && (
      <div class="mt-4 pt-4 border-t border-navy-light/20">
        <a
          href={href}
          class="text-sm text-buoy hover:text-buoy-light inline-flex items-center gap-1 transition-colors"
        >
          Learn more
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    )}
  </div>
</div>
