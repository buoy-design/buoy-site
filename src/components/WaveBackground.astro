<style>
  .wave-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
    background: linear-gradient(
      180deg,
      #0a1628 0%,
      #0d1f35 30%,
      #0a1628 70%,
      #061018 100%
    );
  }

  /* Stars layer */
  .stars-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 50%;
    pointer-events: none;
  }

  .star {
    fill: rgba(255, 255, 255, 0.6);
    animation: twinkle 4s ease-in-out infinite;
  }

  .star:nth-child(2n) { animation-delay: -1s; animation-duration: 3.5s; }
  .star:nth-child(3n) { animation-delay: -2s; animation-duration: 4.5s; }
  .star:nth-child(5n) { animation-delay: -0.5s; animation-duration: 5s; }
  .star:nth-child(7n) { animation-delay: -3s; animation-duration: 3s; }

  @keyframes twinkle {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.9; }
  }

  /* Wave containers - each contains two identical SVGs side by side */
  .wave-container {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 200%;
    height: 40%;
    display: flex;
    flex-direction: row;
  }

  .wave-container .wave-svg {
    flex: 0 0 50%;
    width: 50%;
    height: 100%;
  }

  /* Position each wave layer */
  .wave-container-1 {
    bottom: 10%;
    height: 45%;
    animation: waveScroll 30s linear infinite;
  }

  .wave-container-2 {
    bottom: 5%;
    height: 40%;
    animation: waveScroll 25s linear infinite reverse;
  }

  .wave-container-3 {
    bottom: 0;
    height: 35%;
    animation: waveScroll 20s linear infinite;
  }

  @keyframes waveScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Grid lines */
  .grid-overlay {
    position: absolute;
    bottom: 20%;
    left: 0;
    right: 0;
    height: 60%;
    pointer-events: none;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
  }

  .grid-line {
    height: 1px;
    background: linear-gradient(90deg,
      transparent 0%,
      rgba(30, 100, 200, 0.15) 20%,
      rgba(60, 120, 220, 0.2) 50%,
      rgba(30, 100, 200, 0.15) 80%,
      transparent 100%
    );
    animation: gridPulse 4s ease-in-out infinite;
  }

  .grid-line:nth-child(1) { animation-delay: 0s; }
  .grid-line:nth-child(2) { animation-delay: 0.5s; }
  .grid-line:nth-child(3) { animation-delay: 1s; }
  .grid-line:nth-child(4) { animation-delay: 1.5s; }

  @keyframes gridPulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  /* Floating particles */
  .particles {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(0, 102, 255, 0.6);
    border-radius: 50%;
    animation: float 20s linear infinite;
  }

  .p1 { left: 15%; bottom: 0; animation-delay: 0s; animation-duration: 25s; }
  .p2 { left: 30%; bottom: 0; animation-delay: -5s; animation-duration: 20s; background: rgba(139, 92, 246, 0.5); }
  .p3 { left: 45%; bottom: 0; animation-delay: -10s; animation-duration: 22s; }
  .p4 { left: 60%; bottom: 0; animation-delay: -3s; animation-duration: 18s; background: rgba(249, 115, 22, 0.4); }
  .p5 { left: 75%; bottom: 0; animation-delay: -8s; animation-duration: 24s; background: rgba(139, 92, 246, 0.5); }
  .p6 { left: 90%; bottom: 0; animation-delay: -12s; animation-duration: 21s; }

  @keyframes float {
    0% {
      transform: translateY(0) scale(0);
      opacity: 0;
    }
    5% {
      opacity: 1;
      transform: translateY(-20px) scale(1);
    }
    95% {
      opacity: 1;
      transform: translateY(-45vh) scale(1);
    }
    100% {
      transform: translateY(-50vh) scale(0);
      opacity: 0;
    }
  }

  /* Little boat */
  .boat {
    position: absolute;
    bottom: 38%;
    left: 15%;
    font-size: 1.5rem;
    animation: boatBob 4s ease-in-out infinite, boatDrift 35s linear infinite;
    opacity: 0.7;
    z-index: 1;
  }

  @keyframes boatBob {
    0%, 100% { transform: translateY(0) rotate(-2deg); }
    50% { transform: translateY(-10px) rotate(2deg); }
  }

  @keyframes boatDrift {
    0% { left: -5%; }
    100% { left: 105%; }
  }

  /* Mesh gradient overlay */
  .mesh-overlay {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 20% 20%, rgba(0, 102, 255, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 30%, rgba(139, 92, 246, 0.06) 0%, transparent 50%),
      radial-gradient(ellipse at 40% 80%, rgba(249, 115, 22, 0.05) 0%, transparent 40%),
      radial-gradient(ellipse at 90% 80%, rgba(0, 102, 255, 0.06) 0%, transparent 50%);
    pointer-events: none;
  }

  /* Noise texture overlay */
  .wave-background::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    opacity: 0.03;
    pointer-events: none;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .particle {
      width: 3px;
      height: 3px;
    }
    .boat {
      font-size: 1.2rem;
    }
  }
</style>
