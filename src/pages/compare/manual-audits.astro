---
import CompareLayout from '../../layouts/CompareLayout.astro'

const comparison = [
  { aspect: 'Time', manual: 'Hours to days', buoy: 'Seconds' },
  { aspect: 'Coverage', manual: 'Sampling-based', buoy: '100% of codebase' },
  { aspect: 'Frequency', manual: 'Quarterly at best', buoy: 'Every PR' },
  { aspect: 'Accuracy', manual: 'Human error prone', buoy: 'Consistent rules' },
  { aspect: 'Cost', manual: 'High labor cost', buoy: 'Free CLI' },
  { aspect: 'Currency', manual: 'Outdated immediately', buoy: 'Always current' },
  { aspect: 'Reproducibility', manual: 'Depends on auditor', buoy: 'Identical every run' },
  { aspect: 'Trend Tracking', manual: 'Manual comparison', buoy: 'Automatic over time' },
]
